{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch CMake-built program",
			"type": "cppdbg",
			"request": "launch",
			"targetArchitecture": "x64",
			"program": "${command:cmake.launchTargetProgramPath}",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [],
			"externalConsole": true,
			"linux": {
				"MIMode": "gdb"
			},
			"osx": {
				"MIMode": "lldb"
			},
			"windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "D:\\LLVM\\bin\\gdb.exe",
                "setupCommands": [{
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                    }
                ]
            }
        }
    ]
}