{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "C++ Launch",
			"type": "cppdbg",
			"request": "launch",
			"targetArchitecture": "x64",
			"program": "${workspaceRoot}/bin/hello_world.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [],
			"externalConsole": true,
			"linux": {
				"MIMode": "gdb"
			},
			"osx": {
				"MIMode": "lldb"
			},
			"windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "D:\\mingw64\\bin\\gdb.exe",
                "setupCommands": [{
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }]
			}
		},
		{
			"name": "C++ Attach",
			"type": "cppdbg",
			"request": "launch",
			"targetArchitecture": "x64",
			"program": "${workspaceRoot}/bin/hello_world",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [],
			"processId": "${command.pickProcess}",
			"externalConsole": false,
			"linux": {
				"MIMode": "gdb"
			},
			"osx": {
				"MIMode": "lldb"
			},
			"windows": {
                "MIMode": "gdb",
                "setupCommands": [{
